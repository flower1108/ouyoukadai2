<% book.post_comments.each do |post_comment| %>
  <p><%= image_tag post_comment.user.get_profile_image, size:'50x50' %></p>
  <%= post_comment.user.name %>
  <%= post_comment.comment %>
  <% if post_comment.user == current_user %>
    <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete,remote: true,class:"btn btn-denger" %>
  <% end %>
<% end %>